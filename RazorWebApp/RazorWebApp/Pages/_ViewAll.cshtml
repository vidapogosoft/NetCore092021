@using RazorWebApp.Entities
@model IEnumerable<Registrados>

<table class="table table-bordered" id="RegistradoTable">
    <thead>
        <tr>
            <th>Id Registrado</th>
            <th>Identificacion</th>
            <th>nombresCompletos</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @if (Model.Count() != 0)
        {
            @foreach (var reg in Model)
            {
                <tr>
                    <td>@reg.IdRegistrado</td>
                    <td>@reg.Identificacion</td>
                    <td>@reg.NombresCompletos</td>

                    <td text-right">
                        <a onclick="jQueryModalGet('?handler=CreateOrEdit&id=@reg.IdRegistrado','Edit Registrado')"
                           class="btn btn-info text-white">Editar</a>
                        <form class="d-inline" method="post" asp-page="Index" asp-route-id="@reg.IdRegistrado"
                              asp-page-handler="Delete" onsubmit="return jQueryModalDelete(this)">
                            <button type="submit" class="btn btn-danger text-white">Delete</button>
                        </form>
                    </td>

                </tr>
            }
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $("#RegistradoTable").DataTable();
    });
</script>